<?xml version="1.0"?>
<config>
    <modules>
        <MM_CmsContentFileMode>
            <version>1.2.0</version>
        </MM_CmsContentFileMode>
    </modules>
    <global>
        <blocks>
            <mm_cmscontentfilemode>
                <class>MM_CmsContentFileMode_Block</class>
            </mm_cmscontentfilemode>
        </blocks>
        <helpers>
            <mm_cmscontentfilemode>
                <class>MM_CmsContentFileMode_Helper</class>
            </mm_cmscontentfilemode>
        </helpers>
        <models>
            <mm_cmscontentfilemode>
                <class>MM_CmsContentFileMode_Model</class>
            </mm_cmscontentfilemode>
        </models>

        <events>
            <model_load_after>
                <observers>
                    <mm_cmscontentfilemode>
                        <type>singleton</type>
                        <class>MM_CmsContentFileMode_Model_Observer</class>
                        <method>afterLoad</method>
                    </mm_cmscontentfilemode>
                </observers>
            </model_load_after>
            <model_save_after>
                <observers>
                    <mm_cmscontentfilemode>
                        <type>singleton</type>
                        <class>MM_CmsContentFileMode_Model_Observer</class>
                        <method>afterSave</method>
                    </mm_cmscontentfilemode>
                </observers>
            </model_save_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <mm_cmscontentfilemode>
                    <file>mm/wysiwygtemplate.xml</file>
                </mm_cmscontentfilemode>
            </updates>
        </layout>
        <events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <mm_cmscontentfilemode>
                        <type>singleton</type>
                        <class>MM_CmsContentFileMode_Model_Observer</class>
                        <method>configTinyMceEditor</method>
                    </mm_cmscontentfilemode>
                </observers>
            </cms_wysiwyg_config_prepare>
        </events>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <mm_cmscontentfilemode>
                    <file>mm/tailwindcss.xml</file>
                </mm_cmscontentfilemode>
            </updates>
        </layout>
    </frontend>
    <default>
        <cms>
            <mm_cmscontentfilemode>
                <enable_tailwindcss>0</enable_tailwindcss>
                <force_tailwindcompile>0</force_tailwindcompile>
            </mm_cmscontentfilemode>
        </cms>
    </default>
</config>
